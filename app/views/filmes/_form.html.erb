<%= form_for(filme, html: { class: "basic-grey" }) do |f| %>
  <% if filme.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(filme.errors.count, "error") %> prohibited this filme from being saved:</h2>

      <ul>
      <% filme.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h1>Filme</h1>

  <div class="field">
    <%= f.label :nome %>
    <%= f.text_field :nome %>
  </div>

  <div class="field">
    <%= f.label :imdb %>
    <%= f.text_field :imdb %>
  </div>

  <div class="field">
    <%= f.label :sinopse %>
    <%= f.text_area :sinopse %>
  </div>

  <div class = "field" >
    <%= f.label :data_lancamento %>

    <div class = "time" >
      <%= f.date_select :data_lancamento %>
    </div>
  </div>

  <div class="field">
    <%= f.label :classificacao %>

    <div class = "time" >
      <%= f.number_field :classificacao %>
    </div>

    <br>
  </div>

  <div class="field">
    <%= f.label :hora %>

    <div class = "time" >
      <%= f.number_field :hora %>
    </div>

    <br>
  </div>

  <div class="field">
    <%= f.label :minuto %>

    <div class = "time" >
      <%= f.number_field :minuto %>
    </div>

    <br>
  </div>

  <div class="field">
    <%= f.label :trailer %>
    <%= f.text_field :trailer %>
  </div>

  <div class="field">
    <%= f.label :poster %>
    <%= f.text_field :poster %>
  </div>

  <div class="actions">
    <%= f.submit "Cadastrar Filme", class: "button" %>
    <%= link_to 'Cancelar', filmes_path, class: "button" %>
  </div>
<% end %>
