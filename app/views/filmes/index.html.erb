<%= render partial: "/partials/tab_menu" %>
<div class= "basic-grey" >
  <p id="notice"><%= notice %></p>

  <h1><%= "#{t('messages.listing')} #{@filmes.model_name.human(count: @filmes.count) }" %></h1>

  <table>
    <thead>
      <tr>
        <th><%= @filmes.human_attribute_name("nome") %></th>
        <th><%= @filmes.human_attribute_name("imdb") %></th>
        <th><%= @filmes.human_attribute_name("sinopse") %></th>
        <th><%= @filmes.human_attribute_name("data_lancamento") %></th>
        <th><%= @filmes.human_attribute_name("classificacao") %></th>
        <th><%= @filmes.human_attribute_name("hora") %></th>
        <th><%= @filmes.human_attribute_name("minuto") %></th>
        <th><%= @filmes.human_attribute_name("trailer") %></th>
        <th><%= @filmes.human_attribute_name("poster") %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @filmes.each do |filme| %>
        <tr>
          <td><%= filme.nome %></td>
          <td><%= filme.imdb %></td>
          <td><%= filme.sinopse %></td>
          <td><%= filme.data_lancamento %></td>
          <td><%= filme.classificacao %></td>
          <td><%= filme.hora %></td>
          <td><%= filme.minuto %></td>
          <td><%= filme.trailer %></td>
          <td><%= filme.poster %></td>
          <td><%= link_to t('buttons.show'), filme %></td>
          <td><%= link_to t('buttons.edit'), edit_filme_path(filme) %></td>
          <td><%= link_to t('buttons.destroy'), filme, method: :delete, data: { confirm: t('messages.confirm') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Filme', new_filme_path %>
</div>
