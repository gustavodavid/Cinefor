<p id="notice"><%= notice %></p>

<h1>Filmes</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Imdb</th>
      <th>Sinopse</th>
      <th>Data lancamento</th>
      <th>Classificacao</th>
      <th>Hora</th>
      <th>Minuto</th>
      <th>Trailer</th>
      <th>Poster</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @filmes.each do |filme| %>
      <tr>
        <td><%= filme.nome %></td>
        <td><%= filme.imdb %></td>
        <td><%= filme.sinopse %></td>
        <td><%= filme.data_lancamento %></td>
        <td><%= filme.classificacao %></td>
        <td><%= filme.hora %></td>
        <td><%= filme.minuto %></td>
        <td><%= filme.trailer %></td>
        <td><%= filme.poster %></td>
        <td><%= link_to 'Show', filme %></td>
        <td><%= link_to 'Edit', edit_filme_path(filme) %></td>
        <td><%= link_to 'Destroy', filme, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

