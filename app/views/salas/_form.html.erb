<%= form_for(sala, html: { class: "basic-grey" }) do |f| %>

  <h1>Sala</h1>

  <div class="field">
    <%= f.label :tipo %>
    <%= f.text_field :tipo %>
  </div>

  <div class="field">
    <%= f.label :lingua %>
    <%= f.text_field :lingua %>
  </div>

  <div class="field">
    <%= f.label :cinema_id %>
    <%= collection_select(:sala, :cinema_id, @select_cinema, :id, :nome) %>
  </div>

  <div class="field">
    <%= f.label :filme_id %>

    <%= collection_select(:sala, :filme_id, @select_filme, :id, :nome) %>
  </div>

  <h3>Horários</h3>

  <div class="field">
    <%= hidden_field_tag "sala[horario_ids][]", nil %>
    <% Horario.all.each do |horario| %>
      <div class="select" >
        <%= check_box_tag "sala[horario_ids][]", horario.id, @sala.horario_ids.include?(horario.id), id: dom_id(horario) %>
        <%= label_tag dom_id(horario), horario.horario.to_formatted_s(:time) %>
        <% end %>
      <div>
  </div>

  <div class="actions">
    <%- if !sala.tipo.nil? %>
      <%= f.submit "Editar Sala", class: "button" %>
    <% else %>
      <%= f.submit "Cadastrar Sala", class: "button" %>
    <% end %>
    <%= link_to 'Cancelar', salas_path, class: "button" %>
  </div>

  <% if sala.errors.any? %>
    <div id="error_explanation">
      <h2>Não foi possível cadastrar a sala por um ou mais motivos:</h2>

      <ul>
      <% sala.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% end %>
