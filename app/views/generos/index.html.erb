<%= render partial: "/partials/tab_menu" %>
<div class= "basic-grey" >
  <p id="notice"><%= notice %></p>

  <h1><%= "#{t('messages.listing')} #{@generos.model_name.human(count: @generos.count) }" %></h1>

  <table>
    <thead>
      <tr>
        <th><%= @generos.human_attribute_name("nome") %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @generos.each do |genero| %>
        <tr>
          <td><%= genero.nome %></td>
          <td><%= link_to t('buttons.show'), genero %></td>
          <td><%= link_to t('buttons.edit'), edit_genero_path(genero) %></td>
          <td><%= link_to t('buttons.destroy'), genero, method: :delete, data: { confirm: t('messages.confirm') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to t('buttons.new'), new_cinema_path %>
</div>
