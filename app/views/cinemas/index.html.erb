<%= render partial: "/partials/tab_menu" %>
<div class= "basic-grey" >
  <p id="notice"><%= notice %></p>

  <h1><%= "#{t('messages.listing')} #{@cinemas.model_name.human(count: @cinemas.count) }" %></h1>

  <table>
    <thead>
      <tr>
        <th> <%= @cinemas.human_attribute_name("nome") %> </th>
        <th> <%= @cinemas.human_attribute_name("latitude") %> </th>
        <th> <%= @cinemas.human_attribute_name("longitude") %> </th>
        <th> <%= @cinemas.human_attribute_name("endereco") %> </th>
        <th> <%= @cinemas.human_attribute_name("bairro") %> </th>
        <th> <%= @cinemas.human_attribute_name("numero") %> </th>
        <th> <%= @cinemas.human_attribute_name("descricao") %> </th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cinemas.each do |cinema| %>
        <tr>
          <td><%= cinema.nome %></td>
          <td><%= cinema.latitude %></td>
          <td><%= cinema.longitude %></td>
          <td><%= cinema.endereco %></td>
          <td><%= cinema.bairro %></td>
          <td><%= cinema.numero %></td>
          <td><%= cinema.descricao %></td>
          <td><%= link_to t('buttons.show'), cinema %></td>
          <td><%= link_to t('buttons.edit'), edit_cinema_path(cinema) %></td>
          <td><%= link_to t('buttons.destroy'), cinema, method: :delete, data: { confirm: t('messages.confirm') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to t('buttons.new'), new_cinema_path %>
</div>
