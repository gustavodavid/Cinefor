<p id="notice"><%= notice %></p>

<h1>Cinemas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Endereco</th>
      <th>Bairro</th>
      <th>Numero</th>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cinemas.each do |cinema| %>
      <tr>
        <td><%= cinema.nome %></td>
        <td><%= cinema.latitude %></td>
        <td><%= cinema.longitude %></td>
        <td><%= cinema.endereco %></td>
        <td><%= cinema.bairro %></td>
        <td><%= cinema.numero %></td>
        <td><%= cinema.descricao %></td>
        <td><%= link_to 'Show', cinema %></td>
        <td><%= link_to 'Edit', edit_cinema_path(cinema) %></td>
        <td><%= link_to 'Destroy', cinema, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

