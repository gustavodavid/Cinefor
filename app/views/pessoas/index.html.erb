<%= render partial: "/partials/tab_menu" %>
<div class= "basic-grey" >
  <p id="notice"><%= notice %></p>

  <h1><%= "#{t('messages.listing')} #{@pessoas.model_name.human(count: @pessoas.count) }" %></h1>


  <table>
    <thead>
      <tr>
        <th><%= @pessoas.human_attribute_name("nome") %></th>
        <th><%= @pessoas.human_attribute_name("url_foto") %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @pessoas.each do |pessoa| %>
        <tr>
          <td><%= pessoa.nome %></td>
          <td><%= pessoa.url_foto %></td>
          <td><%= link_to t('buttons.show'), pessoa %></td>
          <td><%= link_to t('buttons.edit'), edit_pessoa_path(pessoa) %></td>
          <td><%= link_to t('buttons.destroy'), pessoa, method: :delete, data: { confirm: t('messages.confirm') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to t('buttons.new'), new_pessoa_path %>
</div>
