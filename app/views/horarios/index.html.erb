<%= render partial: "/partials/tab_menu" %>
<div class= "basic-grey" >
  <p id="notice"><%= notice %></p>

  <h1><%= "#{t('messages.listing')} #{@horarios.model_name.human(count: @horarios.count) }" %></h1>


  <table>
    <thead>
      <tr>
        <th> <%= @horarios.human_attribute_name("horario") %> </th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @horarios.each do |horario| %>
        <tr>
          <td><%= horario.horario.to_formatted_s(:time) %></td>
          <td><%= link_to t('buttons.show'), horario %></td>
          <td><%= link_to t('buttons.edit'), edit_horario_path(horario) %></td>
          <td><%= link_to t('buttons.destroy'), horario, method: :delete, data: { confirm: t('messages.confirm') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to t('buttons.new'), new_horario_path %>
</div>
